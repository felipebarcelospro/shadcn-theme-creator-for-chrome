{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NEXT_PUBLIC_PLUNK_API_KEY", "NEXT_PUBLIC_GOOGLE_ANALYTICS_ID", "GITHUB_TOKEN"],
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NEXT_PUBLIC_PLUNK_API_KEY", "NEXT_PUBLIC_GOOGLE_ANALYTICS_ID", "GITHUB_TOKEN"]
    },    
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NEXT_PUBLIC_PLUNK_API_KEY", "NEXT_PUBLIC_GOOGLE_ANALYTICS_ID", "GITHUB_TOKEN"]
    },
    "ui": {
      "dependsOn": ["^ui"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NEXT_PUBLIC_PLUNK_API_KEY", "NEXT_PUBLIC_GOOGLE_ANALYTICS_ID", "GITHUB_TOKEN"]
    }
  }
}
